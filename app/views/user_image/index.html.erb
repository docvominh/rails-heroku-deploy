<div class="container" style=" padding-top: 100px;">
  <% if !flash[:notice].blank? %>
      <div class="alert alert-info">
        <%= flash[:notice] %>
      </div>
  <% end %>

  <br/>

  <a class="btn btn-primary" href="<%= url_for(:controller => 'user_image', :action => 'new') %>">New Image</a>
  <br/>
  <br/>

  <table class="table table-bordered table-striped">
    <thead>.
    <tr>
      <th>Name</th>
      <th>Download Link</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @all_image.each do |image| %>

        <tr>
          <td><%= image.name %></td>

          <td><%= link_to "Download Resume", image.attachment.url %></td>
          <td>
            <a data-method="delete" data-confirm="Are you sure?" href="<%= url_for(:controller => 'user_image', :action => 'destroy', :id => image.id) %>">
              <button class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span>Delete</button>
            </a>
          </td>
        </tr>

    <% end %>
    </tbody>

  </table>

</div>