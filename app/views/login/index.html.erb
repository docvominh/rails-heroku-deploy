<div class="container">
  <div class="row" style="margin-top: 150px">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Please Sign In</h3>
        </div>
        <div class="panel-body">

          <%= error_messages_for(@model) %>
          <%= form_for @model, :url => url_for(:controller => 'login', :action => 'login') do |m| %>
              <fieldset>
                <div class="form-group">
                  <%= m.text_field :user_id, :class => 'form-control', placeholder: "Username" %>
                </div>

                <div class="form-group">
                  <%= m.password_field :password, :placeholder => "Password", :class => 'form-control' %>
                </div>

                <%= m.submit :value => 'Login', :class => 'btn btn-lg btn-success btn-block' %>

              </fieldset>

          <% end %>

          <% if session[:last_url] %>
              <a href="<%= session[:last_url] %>">Back</a>
          <% end %>


